        </Chart>
        <!--Area Series-->
        <Chart Margin="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Height="500" Title="Sales">
            <Chart.Axes>
                <CategoryAxis Title="Month" Orientation="X" />
            </Chart.Axes>
            <Chart.Series>
                <AreaSeries Title="Product A" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductASales}" />
                <AreaSeries Title="Product B" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductBSales}" />
                <AreaSeries Title="Product C" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductCSales}" />
                <AreaSeries Title="Product D" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductDSales}" />
            </Chart.Series>
        </Chart>

        <!--Stacked Line Series-->
        <Chart Margin="10" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Height="500" Title="Sales">
            <Chart.Axes>
                <CategoryAxis Title="Month" Orientation="X" />
            </Chart.Axes>
            <Chart.Series>
                <StackedLineSeries>
                    <SeriesDefinition Title="Product A" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductASales}" />
                    <SeriesDefinition Title="Product B" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductBSales}" />
                    <SeriesDefinition Title="Product C" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductCSales}" />
                    <SeriesDefinition Title="Product D" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductDSales}" />
                </StackedLineSeries>
            </Chart.Series>
        </Chart>
        <!--Stacked Area series-->
        <Chart Margin="10" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="500" Title="Sales">
            <Chart.Axes>
                <CategoryAxis Title="Month" Orientation="X" />
            </Chart.Axes>
            <Chart.Series>
                <StackedAreaSeries>
                    <SeriesDefinition Title="Product A" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductASales}" />
