        </Chart>
        <!--Scatter Series-->
        <Chart Margin="10" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Height="500" Title="Sales">
            <Chart.Axes>
                <CategoryAxis Title="Month" Orientation="X" />
            </Chart.Axes>
            <Chart.Series>
                <ScatterSeries Title="Product A" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductASales}" />
                <ScatterSeries Title="Product B" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductBSales}" />
                <ScatterSeries Title="Product C" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductCSales}" />
