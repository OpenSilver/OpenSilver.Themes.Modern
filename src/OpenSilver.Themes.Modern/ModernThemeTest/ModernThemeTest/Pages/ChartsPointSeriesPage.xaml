                <ScatterSeries Title="Product I" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductISales}" />
                <ScatterSeries Title="Product J" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductJSales}" />
