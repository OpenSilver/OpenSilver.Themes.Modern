        <!--Bubble Series-->
        <Chart Margin="10" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Height="500" Title="Sales">
            <Chart.Axes>
                <CategoryAxis Title="Month" Orientation="X" />
            </Chart.Axes>
            <Chart.Series>
                <BubbleSeries Title="Product A" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductASales}" />
                <BubbleSeries Title="Product B" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductBSales}" />
                <BubbleSeries Title="Product C" DependentValueBinding="{Binding SalesAmount}" IndependentValuePath="Month" ItemsSource="{Binding ProductCSales}" />
