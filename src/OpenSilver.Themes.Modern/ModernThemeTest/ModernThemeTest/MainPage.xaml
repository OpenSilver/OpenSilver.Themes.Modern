                    <ComboBoxItem Content="Item2" />
                </ComboBox>
                <ComboBox Canvas.Left="451" Canvas.Top="540" MinWidth="66" Padding="6,4" FontSize="13" flatdesign:FlatDesignProperties.Label="Pick an item" IsEnabled="False">
                    <ComboBoxItem Content="Item1" IsSelected="True" />
                    <ComboBoxItem Content="Item2" />
                </ComboBox>
                <TreeView Canvas.Left="56" Canvas.Top="450" FontSize="13">
                    <TreeViewItem Header="Root" IsExpanded="True">
                        <TreeViewItem Header="Child 1" IsExpanded="True">
                            <TreeViewItem Header="Grandchild 1" />
                            <TreeViewItem Header="Grandchild 2" />
                        </TreeViewItem>
                        <TreeViewItem Header="Child 2">
                            <TreeViewItem Header="Grandchild 3" />
                            <TreeViewItem Header="Grandchild 4" />
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
                <TreeView Canvas.Left="274" Canvas.Top="450" FontSize="13" IsEnabled="False">
                    <TreeViewItem Header="Root" IsExpanded="True">
                        <TreeViewItem Header="Child 1" IsExpanded="True">
                            <TreeViewItem Header="Grandchild 1" />
                            <TreeViewItem Header="Grandchild 2" />
                        </TreeViewItem>
                        <TreeViewItem Header="Child 2">
                            <TreeViewItem Header="Grandchild 3" />
                            <TreeViewItem Header="Grandchild 4" />
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
                <ItemsControl Canvas.Left="457" Canvas.Top="423">
                    <TextBlock Text="Item 1" />
                    <TextBlock Text="Item 2" />
                    <TextBlock Text="Item 3" />
                </ItemsControl>
