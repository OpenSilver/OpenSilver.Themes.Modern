                <Expander Visibility="Collapsed" Canvas.Left="941" Canvas.Top="20" Header="Expander" Content="Content" IsExpanded="True" IsEnabled="False"/>
                <Expander Visibility="Collapsed" Canvas.Left="841" Canvas.Top="100" Header="Expander" Content="Content" ExpandDirection="Up" IsExpanded="True" />
                <Expander Visibility="Collapsed" Canvas.Left="941" Canvas.Top="100" Header="Expander" Content="Content" ExpandDirection="Up" IsExpanded="True" IsEnabled="False"/>

