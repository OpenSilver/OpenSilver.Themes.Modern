                <DataPager Canvas.Left="560" Canvas.Top="777" DisplayMode="PreviousNext"/>
                <DataPager Canvas.Left="560" Canvas.Top="827" DisplayMode="PreviousNextNumeric"/>
                <TabControl Canvas.Left="52" Canvas.Top="915" MinHeight="70">
