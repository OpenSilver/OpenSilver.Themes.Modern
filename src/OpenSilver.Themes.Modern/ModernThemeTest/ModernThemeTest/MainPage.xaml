                <DataGrid Canvas.Left="58" Canvas.Top="647" ItemsSource="{Binding People}" />
                <DataGrid Canvas.Left="308" Canvas.Top="647" ItemsSource="{Binding People}" IsEnabled="False"/>
                <DataPager Canvas.Left="560" Canvas.Top="577" DisplayMode="FirstLastNumeric"/>
                <DataPager Canvas.Left="560" Canvas.Top="627" DisplayMode="FirstLastPreviousNext"/>
                <DataPager Canvas.Left="560" Canvas.Top="677" DisplayMode="FirstLastPreviousNextNumeric"/>
