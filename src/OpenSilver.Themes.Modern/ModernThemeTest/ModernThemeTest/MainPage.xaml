                <Button Canvas.Left="138" Canvas.Top="15" Content="Button" FontSize="13" Padding="12,7" />
                <TextBox Canvas.Left="222" Canvas.Top="15" Text="TextBox" FontSize="13" />
                <CheckBox Canvas.Left="292" Canvas.Top="15" Content="Checkbox" FontSize="13" />
                <ToggleButton Canvas.Left="386" Canvas.Top="15" Content="ToggleButton" FontSize="13" Padding="12,7" />
                <DatePicker Canvas.Left="512" Canvas.Top="15" FontSize="13" />
