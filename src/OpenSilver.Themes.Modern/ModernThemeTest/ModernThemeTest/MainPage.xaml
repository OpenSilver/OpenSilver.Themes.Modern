                <CheckBox Canvas.Left="256" Canvas.Top="177" Content="Checkbox" FontSize="13" IsThreeState="True" IsEnabled="False"/>
                <ToggleButton Canvas.Left="58" Canvas.Top="208" Content="ToggleButton" FontSize="13" Padding="12,7" />
