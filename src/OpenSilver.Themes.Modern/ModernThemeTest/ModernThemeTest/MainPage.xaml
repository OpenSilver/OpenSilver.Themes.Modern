                <TabControl Canvas.Left="222" Canvas.Top="1015" MinHeight="70" IsEnabled="False" TabStripPlacement="Left">
                    <TabItem Header="TabItem1">
                        <RadioButton Content="Content1"/>
                    </TabItem>
                    <TabItem Header="TabItem2">
                        <RadioButton Content="Content2"/>
                    </TabItem>
                </TabControl>
                <TabControl Canvas.Left="52" Canvas.Top="1115" MinHeight="70" TabStripPlacement="Right">
