                        <Path x:Name="SelectionHighlight" Data="{TemplateBinding GeometrySelection}" Fill="{DynamicResource Theme_ErrorBrush}" StrokeMiterLimit="1" IsHitTestVisible="False" Opacity="0" />
                        <Path x:Name="MouseOverHighlight" Data="{TemplateBinding GeometryHighlight}" Fill="{DynamicResource Theme_BackgroundBrush}" StrokeMiterLimit="1" IsHitTestVisible="False" Opacity="0" />
                    </Grid>
                </ControlTemplate>
