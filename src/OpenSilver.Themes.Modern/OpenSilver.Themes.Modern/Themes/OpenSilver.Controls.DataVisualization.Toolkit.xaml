                        <Path Fill="{TemplateBinding Background}" Stretch="Fill" Data="F1 M 0,50 L40,40 50,0 60,40 100,50 60,60 50,100 40,60 0,50 Z " Opacity="{DynamicResource Theme_ChartHaloOpacity}">
